{% extends "admin/base.html.twig" %}

{% block body %}
        <!-- Begin Page Content -->
        <div class="container-fluid">
          <a href="{{ path('admin_new_article')}}" class="btn btn-outline-primary" >Ajouter un nouvelle article</a>
          <a href="{{ path('home')}}" class="btn btn-outline-primary" >Blog</a>
          <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
              <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Publié</th>
                <th>Categorie</th>
                <th>Modification</th>
                <th>Supprimer</th>
              </tr>
            </thead>
            <tbody>
              {% for article in articles %}
                
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <img
                        src="https://mdbootstrap.com/img/new/avatars/8.jpg"
                        alt=""
                        style="width: 45px; height: 45px"
                        class="rounded-circle"
                        />
                    <div class="ms-3">
                      <p class="fw-bold mb-1">{{ article.title }}</p>
                      <p class="text-muted mb-0">john.doe@gmail.com</p>
                    </div>
                  </div>
                </td>
                <td>
                  <p class="fw-normal mb-1">{{ article.description|slice(0, 80) }}...</p>
                  <p class="text-muted mb-0">IT department</p>
                </td>
                <td>
                  {% if article.published == true %}
                  <span class="badge badge-success rounded-pill d-inline">Active</span>
                  {% else %}
                  <span class="badge badge-danger rounded-pill d-inline">Désactiver</span>
                  {% endif %}
                </td>
                <td>{% for categorie in categories %}
                  {% if article.category == categorie %}
                    {{ categorie.name }}
                  {% endif %}
                {% endfor %}
                </td>
                <td>
                  <button type="button" class="btn btn-link btn-sm btn-rounded">
                    Modifier
                  </button>
                </td>
                <td>
                  <button type="button" class="btn btn-danger btn-sm btn-rounded">
                    Supprimer
                  </button>
                </td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
          </div>
          <!-- /.container-fluid -->
{% endblock body %}

