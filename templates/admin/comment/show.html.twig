{% extends "admin/base.html.twig" %}
{% block title %}
  Commentaires
{% endblock title %}
{% block body %}

    <div class="container-fluid">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Commentaires</h1>
          </div>

        <table class="table align-middle mb-0 bg-white">
          <thead class="bg-light">
            <tr>
              <th>Nom d'utilisateur</th>
              <th>Commentaire</th>
              <th>Article</th>
              <th>Supprimer</th>
            </tr>
          </thead>
          <tbody>
            {% for commentaire in commentaires %}
            <tr>
              <td>
                <div class="d-flex align-items-center">

                  <div class="ms-3">
                    <p class="fw-bold mb-0">{{ commentaire.username }}</p>
                  </div>
                </div>
              </td>
                <td>
                    <p class="fw-normal mb-0">{{ commentaire.content }}</p>
                </td>
                <td>
                    {% for article in articles %}
                        
                    {% if commentaire.article == article %}
                    <p class="fw-normal mb-0">{{ article.title }}</p>
                    {% endif %}
                    {% endfor %}
                </td>
              <td>
                <a href="{{ path('comment_delete', {'id' : commentaire.id}) }}" class="btn btn-outline-danger" onclick="return confirm('Vous êtes sur de vouloir supprimer cet élément?')" >
                  Supprimer
                </a>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
        </div>
        <!-- /.container-fluid -->

{% endblock body %}