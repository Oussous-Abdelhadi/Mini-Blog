{% extends "base.html.twig" %}
{% block title %}
    {{ article.title }}
{% endblock title %}

{% block body %}
<style>
.container {
  position: relative;
  overflow: hidden;
  width: 80%;
  padding-top: 50%; /* 16:9 Aspect Ratio (divide 9 by 16 = 0.5625) */
}

/* Then style the iframe to fit in the container div with full height and width */
.responsive-iframe {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100%;
}

.comment__content{grid-area:content}
.comment__content p{white-space:pre-wrap}

.comment-list > * + * {
    margin-top: calc(5 * var(--space));
}
.comments__title + * {
    margin-top: calc(2 * var(--space));
}
</style>


<div id="main">
    <h1 class="">{{ article.title }}</h1>
    <div class="container">
        <iframe class="responsive-iframe" src="{{article.url}}"></iframe>
    </div>
    <hr style="margin: 2em;">
    <h2>A propos de ce tutoriel</h2>
    <p class="lead">{{ article.description }}.</p>
    <h2>{{ comments|length }}commentaires</h2>
    {{ form_start(form)}}
        {{ form_row(form.username) }}
        {{ form_row(form.content) }}
        <br>
        <button type="submit">ENVOYER</button>
    {{form_end(form)}}
    <hr style="margin: 2em;">
    <div class="comment-list">
        {% for comment in comments %}
            <h3 style="font-weight: bold;">{{ comment.username }}</h3>
            <p class="published">publi√© le {{ comment.createdAt|date("j F,Y") }}</p>
            <div class="comment__content">
                <p>{{ comment.content }}</p>
            </div>
        {% endfor %}
    </div>

</div>
{% endblock body %}

