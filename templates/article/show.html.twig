{% extends "base.html.twig" %}
{% block title %}
    {{ article.titre }}
{% endblock title %}

{% block body %}
<div class="container">

    <div class="row featurette mt-3">
        <div class="col-12">
            <h1 class="featurette-heading fw-normal lh-1">{{ article.titre }}</h1>
            <iframe src="{{article.video}}" style="width:100%; height:100%; max-width:700px; min-height: 100px;"></iframe>
            <hr style="margin: 2em;">
                <h2>A propos de ce tutoriel</h2>
                <p class="lead">{{ article.description }}.</p>
            </div>
        </div>
        
    </div>
{% endblock body %}

