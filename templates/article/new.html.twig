{% extends "base.html.twig" %}
{% block title %}
    Ajouter un article
{% endblock title %}

{% block body %}
    <h1>Ajouter un article</h1>
    {{ form_start(form) }}
    <div class="form-group">
        {{ form_row(form.auteur) }}
    </div>
    <div class="form-group">
        {{ form_row(form.titre) }}
    </div>
    <div class="form-group">
        {{ form_row(form.video) }}
    </div>
    <div class="form-group">
        {{ form_row(form.description) }}
    </div>
    <div class="form-group">
        {{ form_row(form.date) }}
    </div>
    <br>
    <button  class="btn btn-primary">Ajouter un article</button>
    {{ form_end(form) }}
{% endblock body %}