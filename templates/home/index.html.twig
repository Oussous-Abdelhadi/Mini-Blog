{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {% for article in articles %}
        <div class="col">
          <div class="card shadow-sm">
            <iframe src="https://www.youtube.com/embed/cq-7VCqfNK4" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            <div class="card-body">
              <p class="card-text">{{ article.description|slice(0, 80) }}...</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="{{ path('article_show', {"id": article.id}) }}" class="btn btn-sm btn-outline-secondary">Voir</a>
                  <a href="{{ path('article_edit', {"id": article.id}) }}" class="btn btn-sm btn-outline-secondary">Modifier</a>
                  <a href="{{ path('article_delete', {"id": article.id}) }}" oncllick="return confirm('Vous voulez vraiment supprimer cette article?')" class="btn btn-sm btn-outline-secondary">Supprimer</a>
                </div>
                <small class="text-muted">{{ article.createdAt|date("m/d/Y") }}</small>
              </div>
            </div>
          </div>
        </div>
            
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}
